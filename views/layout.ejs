<!-- layout.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HoneyMe Cake Shop</title>
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <!-- 顶部导航栏 -->
    <header class="navbar">
        <div class="logo">
            <img src="/Logo.png" alt="HoneyMe Logo">
        </div>
        <div class="nav-right">
            <div class="search-bar-container">
                <input type="text" class="search-bar" placeholder="Search...">
                <button class="search-icon">
                    <i class="fas fa-search"></i>
                </button>
            </div>
            <a href="/login" class="btn login-btn" id="login-btn">
                <i class="fas fa-user"></i> <span class="login-text">Login</span>
            </a>
            <button class="btn cart-btn">
                <i class="fas fa-shopping-cart"></i>
            </button>
        </div>
    </header>

    <!-- 导航菜单 -->
    <nav class="menu">
        <ul>
            <li><a href="#">NEW & SEASONAL</a></li>
            <li><a href="#">ORDER</a></li>
            <li><a href="#">ALL CAKES</a></li>
            <li><a href="#">DESSERT</a></li>
            <li><a href="#">GIFT CARD</a></li>
            <li><a href="#">ABOUT</a></li>
            <li><a href="#">CONTACT</a></li>
        </ul>
    </nav>

    <!-- 动态内容部分 -->
    <main>
        <%- body %>
    </main>

    <!-- 底部元素 -->
    <footer class="footer">
        <div class="footer-container">
            <div class="footer-section join-us">
                <h3>Join Us!</h3>
                <p>Be the first to get the inside scoop on promotions, special events and exclusive early access to new product launches.</p>
                <div class="subscribe">
                    <input type="email" placeholder="Enter Your email address" class="subscribe-input">
                    <button class="subscribe-button">Join Now</button>
                </div>
                <div class="regional-websites">
                    <span>Regional Websites</span>
                    <button class="country-button">United States</button>
                </div>
            </div>
            <div class="footer-section social-media">
                <h3>FOLLOW US</h3>
                <div class="social-icons">
                    <i class="fab fa-instagram"></i>
                    <i class="fab fa-facebook"></i>
                    <i class="fab fa-pinterest"></i>
                    <i class="fab fa-youtube"></i>
                    <i class="fas fa-envelope"></i>
                </div>
            </div>
            <div class="footer-section links">
                <div>
                    <h4>CUSTOMER CARE</h4>
                    <ul>
                        <li><a href="#">Boutiques</a></li>
                        <li><a href="#">Contact</a></li>
                        <li><a href="#">Accessibility</a></li>
                    </ul>
                </div>
                <div>
                    <h4>ABOUT HONEYME</h4>
                    <ul>
                        <li><a href="#">Licensing</a></li>
                        <li><a href="#">Terms & Conditions</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                    </ul>
                </div>
                <div>
                    <h4>WORK WITH US</h4>
                    <ul>
                        <li><a href="#">Careers</a></li>
                        <li><a href="#">Donations</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <p>© 2024 HoneyMe Cakeshop. All Rights Reserved.</p>
            <a href="#top" class="back-to-top">↑ Back to top</a>
        </div>
    </footer>

    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <script src="/scripts.js"></script> <!-- 你的自定义脚本 -->
</body>
</html>